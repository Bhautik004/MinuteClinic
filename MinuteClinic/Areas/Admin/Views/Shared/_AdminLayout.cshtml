<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- AdminLTE CSS -->
    <link rel="stylesheet" href="~/admin-lte/dist/css/adminlte.min.css" />
    <link rel="stylesheet" href="~/admin-lte/plugins/fontawesome-free/css/all.min.css" />
    <!-- SweetAlert2 CSS and JS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">

    <style>
        .sticky-filter {
            position: -webkit-sticky; /* For Safari */
            position: sticky;
            top: 0; /* Stick at the top of the viewport */
            z-index: 1000; /* Ensure the filter stays on top of other elements */
            background-color: white; /* Optional: make background white for better visibility */
        }

        /* Ensure the scrollable content has a fixed height */
        .scrollable-content {
            max-height: 70vh; /* Set maximum height for the scrollable content */
            overflow-y: auto; /* Enable vertical scrolling */
        }
    </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-area="admin" asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                </li>

                <li class="nav-item d-none d-sm-inline-block">
                    <a  href="../"  class="nav-link">View WebSite</a>
                </li>

            </ul>
        </nav>


        <!-- Sidebar -->
        
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Sidebar content -->
            <!-- Brand Logo -->
            <a asp-area="Admin" asp-controller="home" class="brand-link">
                <img src="~/admin-lte/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">Admin</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column font-weight-light" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-area="Admin" asp-controller="vaccine" asp-action="index">
                                <i class="nav-icon fa-solid fas fa-syringe"></i>
                                <p>
                                    Manage Vaccines
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="clinics" asp-action="index" class="nav-link ">
                                <i class="nav-icon fas fa-clinic-medical"></i>
                                <p>
                                    Manage Clinics
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="users" asp-action="index" class="nav-link">
                                <i class="nav-icon far fa-user"></i>
                                <p>
                                    Manage Users
                                </p>
                            </a>
                        </li>

                    </ul>
                </nav>
            </div>
        </aside>



        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert" id="successAlert">
                    <strong>@TempData["SuccessMessage"]</strong>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            @RenderBody()
        </div>

        <!-- Footer -->
        <footer class="main-footer">
            <strong>Copyright &copy; 2024 <a href="#">Admin</a>.</strong>
            All rights reserved.
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> 1.0.0
            </div>
        </footer>

    </div>

    <!-- AdminLTE JS -->
    <script src="~/admin-lte/plugins/jquery/jquery.min.js"></script>
    <script src="~/admin-lte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/admin-lte/dist/js/adminlte.min.js"></script>


    <script>
        // Automatically hide the alert after 3 seconds (3000 ms)
        setTimeout(function () {
            $('#successAlert').fadeOut('slow', function () {
                $(this).alert('close'); // Close it after the fadeOut
            });
        }, 3000); // 3000 milliseconds = 3 seconds
    </script>
    @RenderSection("Scripts", required: false)


       

   
</body>
</html>
